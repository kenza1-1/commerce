{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
  <div class='header'> 
        <div class=" bg-dark text-white">
        <img class="card-img img-fluid" src="https://cdn.allbirds.com/image/upload/f_auto,q_auto/v1/production/pageSectionHero/en-US/images/6u4i5mk8KOjFYGLlpfeoqp/1" alt="Card image">
