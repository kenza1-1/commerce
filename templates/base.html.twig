<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <link rel="shortcut icon" href="{{asset('build/images/logo.png')}}" />

        {% block stylesheets %} {{ encore_entry_link_tags('app') }} {% endblock %}
    </head>
    <body>
     <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-fixed p-0 nav-top">
      <div class="espace-img"><img class="card-img img-fluid img-logo" src="{{asset('build/images/logo.png')}}"  alt="Card image"></div>  
            <a class="navbar-brand nav-acscom" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navbarback" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item nav-effect active pl-5 ">
                        <a class="nav-link" href="{{ path('produits')}}"><span class="hover">Accueil</span><span class="sr-only">(current)</span></a>
                    </li>
                    {% if not app.user %}
                     <li class="nav-item nav-effect active pl-5">
                        <a class="nav-link " href="{{ path('security_login')}}"><span class="hover">Se connecter</span></a>
                    </li>
                    <li class="nav-item nav-effect active pl-5">
                        <a class="nav-link " href="{{ path('security_registration')}}"><span class="hover">Inscription</span></a>
                    </li>
                    {% else %}
                    <li class="nav-item nav-effect active pl-5">
                        <a class="nav-link " href="{{path ('security_logout')}}"><span class="hover">Se déconnecter</span></a>
                    </li>
                    <li>
                     {% endif %}
                     {% for message in app.flashes('notice') %}
                        <div class="alert alert-success" id="msg">
                            {{ message }}
                        </div>  
                     {% endfor %}
                    </li> 
                </ul>
            </div>
        </nav> 
        {# {% block footer %}
        {% endblock %} #}
     
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('build/app.js') }}"></script>
            <script type="text/javascript" src="{{ asset('build/runtime.js') }}"></script>
        {% endblock %}
        <footer id="footer">
                <div class"main-footer" id="main-footer">
                        <div class="container">
                                <div class="col s12 m12 l12 center-align">
                                        <img src="{{asset('build/images/logo.png')}}" width="100" alt="image-logo">
                                        <h2 class="pt-3">Company Name</h2>
                                        <p class="pt-3">Description du site : Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ratione eum qui mollitia praesentium sit nihil nostrum.</p>
                                        <div class="icons pt-4 ">
                                                <a href="https://www.facebook.com/profile.php?id=100009352598699" target="_blank">
                                                        <i class="fab fa-facebook-f "></i>
                                                </a>
                                                <a href="#"  target="_blank">
                                                        <i class="fab fa-twitter"></i>
                                                </a>
                                                <a href="#"  target="_blank">
                                                        <i class="fab fa-github"></i>
                                                </a>

                                        </div>
                                </div> 
                        </div>                  
                </div>
                <div class="footer-links">
                        <ul>
                                <li>
                                        <p>Copyright Company Name © {{ "now"|date('Y') }}. All rights reserved.</p>

                                </li>
                        </ul>
                </div>
        </footer>
  </body>
</html>